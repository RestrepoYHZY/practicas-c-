<Window x:Class="conexionGestionPedidos.Actualiza"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:conexionGestionPedidos"
        mc:Ignorable="d"
        Title="Actualiza" Height="450" Width="800">
    <Grid>
        <TextBox x:Name="cuadroActualizar" HorizontalAlignment="Left" Margin="282,79,0,0" TextWrapping="Wrap" Text="TextBox" VerticalAlignment="Top" Width="334" RenderTransformOrigin="0.489,0.553" Height="30">
            <TextBox.RenderTransform>
                <TransformGroup>
                    <ScaleTransform/>
                    <SkewTransform AngleY="-0.282"/>
                    <RotateTransform/>
                    <TranslateTransform Y="0.608"/>
                </TransformGroup>
            </TextBox.RenderTransform>
        </TextBox>
        <Label Content="Nombre del Cliente:" HorizontalAlignment="Left" Margin="140,81,0,0" VerticalAlignment="Top"/>
        <Button Content="Actualizar" HorizontalAlignment="Left" Margin="528,127,0,0" VerticalAlignment="Top" Height="25" Width="88" Click="Button_Click"/>

    </Grid>
</Window>
