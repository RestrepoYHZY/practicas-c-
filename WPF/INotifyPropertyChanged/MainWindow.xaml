<Window x:Class="INotifyPropertyChanged.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:INotifyPropertyChanged"
        mc:Ignorable="d"
        Title="Inotify.." Height="450" Width="800">
    
    <StackPanel>
        <Label Content="Nombre"></Label>
        <TextBlock Width="100" Height="30" Text="{Binding Path=Nombre, Mode=TwoWay}"></TextBlock>
        <Label Content="Apellido"></Label>
        <TextBlock Width="100" Height="30" Text="{Binding Path=Apellido, Mode=TwoWay}"></TextBlock>
        <Label Content="Nombre_completo"></Label>
        <TextBlock Width="100" Height="30" Text="{Binding Path=Nombre_completo, Mode=TwoWay}"></TextBlock>
    
    </StackPanel>
</Window>
